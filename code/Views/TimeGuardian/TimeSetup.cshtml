    <script>
        $(function () {

            // Animate summary mini-fill on page load
            setTimeout(function () {
                $('#summaryFill').css('width', '42%'); // example
            }, 200);

            // function to animate usage bars inside a container
            function animateUsageBars($container) {
                $container.find('.usage-bar-fill').each(function () {
                    var $el = $(this);
                    var minutes = +$el.data('minutes') || 0;
                    var total = +$el.data('total') || 1;
                    var pct = Math.round((minutes / total) * 100);
                    // animate with jQuery
                    $el.css('width', '0%');
                    $el.animate({ width: pct + '%' }, 900);
                });
            }


            // When any accordion is shown -> animate its bars
            $('#timeAccordion').on('shown.bs.collapse', function (e) {
                var $panel = $(e.target);
                animateUsageBars($panel);
                // animateDayBars($panel);
            });

            // Optionally animate the first accordion when page loads
            // (open first accordion automatically and animate)
            setTimeout(function () {
                var first = new bootstrap.Collapse($('#collapseOne'), { show: true });
            }, 300);

            // Curfew toggle behaviour
            $('#curfewToggle').on('click', function () {
                $(this).toggleClass('off');
                var enabled = !$(this).hasClass('off');
                // You can send the enabled state to your backend here
            });

            // Optional: compute total from apps and show totalTimeDisplay (using sample minutes)
            function computeTotal() {
                var total = 0;
                $('.usage-bar-fill').each(function () { total += Number($(this).data('minutes') || 0); });
                // convert minutes to hours+minutes
                var h = Math.floor(total / 60);
                var m = total % 60;
                $('#totalTimeDisplay').text(h + 'h ' + m + 'm');
            }
            // initial compute
            computeTotal();

        });
    </script>
