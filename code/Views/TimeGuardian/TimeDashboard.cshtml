        /***********************************************/

    :root {
        --primary: #3b82f6;
        --accent: #ffcc66;
        --muted: #6b7280;
        --card-bg: #ffffff;
        --surface: #f6f7fb;
    }


    .dashboard-card {
        max-width: 920px;
        margin: 0 auto;
    }

    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        gap: 12px;
        margin-bottom: 18px;
    }

    .page-title {
        font-size: 36px;
        font-weight: 700;
        line-height: 1;
    }

    .gear {
        background: #fff;
        border-radius: 10px;
        padding: 10px;
        box-shadow: 0 6px 18px rgba(16,24,40,0.06);
        cursor: pointer;
        color: var(--primary);
        font-size: 18px;
    }

    /* Top summary card */
    .summary-card {
        background: var(--card-bg);
        border-radius: 16px;
        padding: 22px;
        box-shadow: 0 10px 30px rgba(16,24,40,0.06);
        margin-bottom: 22px;
    }

    .summary-title {
        font-weight: 600;
        color: #111827;
        margin-bottom: 6px;
    }

    .big-time {
        font-size: 40px;
        font-weight: 700;
        margin-bottom: 12px;
    }

    .mini-bar {
        height: 10px;
        background: #eef2ff;
        border-radius: 8px;
        overflow: hidden;
    }

        .mini-bar .fill {
            height: 100%;
            width: 0%;
            background: linear-gradient(90deg, var(--primary), #6AA6FF);
            border-radius: 8px;
            transition: width .9s ease;
        }

    .summary-labels {
        display: flex;
        justify-content: space-between;
        gap: 12px;
        margin-top: 10px;
        font-weight: 500;
        color: var(--muted);
    }

    /* Accordion custom style */
    .accordion .accordion-item {
        border: none;
        margin-bottom: 12px;
    }

    .accordion-button {
        border-radius: 12px;
        background: #fff;
        box-shadow: 0 8px 20px rgba(16,24,40,0.04);
        color: #111827;
        font-weight: 600;
        padding: 18px;
        font-size:17px
    }

        .accordion-button:not(.collapsed) {
            color: #111827;
            background: linear-gradient(90deg, rgba(59,130,246,0.08), rgba(59,130,246,0.03));
        }

    .accordion-body {
        background: #ffffff;
        border-radius: 10px;
        box-shadow: 0 8px 30px rgba(16,24,40,0.04);
        padding: 18px;
        margin-top: 10px;
    }

    /* App item (Accordion 1) */
    .app-item {
        display: flex;
        align-items: center;
        gap: 14px;
        padding: 10px;
        border-radius: 10px;
        transition: transform .18s ease, box-shadow .18s ease;
    }

        .app-item:hover {
            transform: translateY(-4px);
            box-shadow: 0 8px 20px rgba(16,24,40,0.04);
        }

    .app-icon {
        min-width: 35px;
        min-height: 35px;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 22px;
        color: #fff;
    }

    .app-name {
        font-weight: 600;
    }

    .app-time {
        color: var(--muted);
