    }

    .nudge-text {
        font-weight: 600;
    }

    .nudge-time {
        color: var(--muted);
        font-size: 0.92rem;
    }

    /* Weekly summary */
    .day-item {
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 12px;
        padding: 10px 10px;
        margin-bottom:10px;
        background-color: #edf2faa1;
        border-radius:15px;
    }

    .day-left {
        display: flex;
        align-items: center;
        gap: 12px;
        min-width: 150px;
    }

    .day-label {
        font-weight: 600;
    }

    

    .day-hours {
        min-width: 70px;
        text-align: right;
        color: var(--muted);
        font-weight: 600;
    }

    /* Curfew */
    .curfew-card {
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 12px;
        padding: 12px;
        border-radius: 12px;
        background: linear-gradient(90deg, rgba(59,130,246,0.06), rgba(59,130,246,0.02));
    }

    .curfew-times {
        font-weight: 700;
        font-size: 1rem;
    }

    .toggle {
        --size: 46px;
        width: var(--size);
        height: calc(var(--size) / 2);
        background: #e9f2ff;
        border-radius: 999px;
        position: relative;
        cursor: pointer;
        padding: 4px;
        box-sizing: border-box;
    }

        .toggle .dot {
            width: calc(var(--size) / 2 - 8px);
            height: calc(var(--size) / 2 - 8px);
            background: var(--primary);
            border-radius: 50%;
            position: absolute;
            left: 4px;
            top: 4px;
            transition: left .25s ease, transform .25s ease;
        }

        .toggle.off .dot {
            left: calc(100% - (var(--size) / 2 + 4px));
            background: #cbd5e1;
            transform: translateX(-6px);
        }

    /* small helpers */
    .mt-18 {
        margin-top: 18px;
    }

    .mb-10 {
