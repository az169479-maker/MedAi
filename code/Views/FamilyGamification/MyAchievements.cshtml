<style>



    .achievement {
        text-align: center;
        margin-bottom: 30px;
    }

    .achievement img {
        width: 80px;
        height: 80px;
        object-fit: contain;
        margin-bottom: 10px;
    }

    .locked img {
        opacity: 0.4;
    }

    .achievement {
        text-align: center;
        padding: 20px;
        border-radius: 12px;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .achievement:hover {
            transform: scale(1.05);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
            cursor: pointer;
        }

    .achievement-label {
        font-weight: 500;
        font-size: 1rem;
    }
    .achievement i
    {
        font-size:60px;
        margin-bottom:15px;

    }
</style>
