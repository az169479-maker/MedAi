<div class="signup-card">
    <h2>Device Pairing</h2>

    <!-- Fitbit -->
    <div class="device-card">
        <div class="device-info">
            <span class="device-icon">🔷</span>
            <span>Fitbit</span>
        </div>
        <button class="btn unpaired">Pair</button>
    </div>

    <!-- Apple Watch -->
    <div class="device-card">
        <div class="device-info">
            <span class="device-icon">⌚</span>
            <span>Apple Watch</span>
        </div>
        <button class="btn paired">Paired</button>
    </div>

    <!-- Generic -->
    <div class="device-card">
        <div class="device-info">
            <span class="device-icon">📟</span>
            <span>Generic</span>
        </div>
        <button class="btn unpaired">Pair</button>
    </div>
</div>


