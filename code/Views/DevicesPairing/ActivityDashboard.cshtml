
@{
    ViewData["Title"] = "ActivityDashboard";
}
<style>
    .signup-card h1 {
      font-size: 24px;
      font-weight: 700;
      color: #1e3a8a;
    }

    .signup-card h2 {
      font-size: 16px;
      color: #6b7280;
      margin-bottom: 24px;
    }

    .stat-box {
      text-align: center;
      padding: 16px;
      border-radius: 12px;
      background: #f3f4f6;
      animation: fadeInUp 0.6s ease;
    }

    .stat-icon {
      font-size: 28px;
      display: block;
      margin-bottom: 8px;
    }

    .stat-value {
      font-size: 20px;
      font-weight: 700;
    }

    .stat-label {
      font-size: 14px;
      color: #6b7280;
    }

    .btn-refresh {
      font-size: 16px;
      font-weight: 600;
      padding: 12px;
      border-radius: 10px;
    }

    .signup-card {
        padding-bottom: 22px;
    }
    /* keyframes fadeInUp {
      from { opacity: 0; transform: translateY(20px); }
      to { opacity: 1; transform: translateY(0); }
    }

    keyframes fadeIn {
      from { opacity: 0; }
      to { opacity: 1; }
    } */
  </style>
<div class="signup-card">
    <h1>Activity Dashboard</h1>
    <h2>Today's Stats</h2>

    <div class="row g-3 mb-4">
        <div class="col-6">
            <div class="stat-box">
                <span class="stat-icon">👣</span>
                <div class="stat-value">5,421</div>
                <div class="stat-label">Steps</div>
            </div>
        </div>
        <div class="col-6">
            <div class="stat-box">
                <span class="stat-icon">⌚</span>
                <div class="stat-value">36 min</div>
                <div class="stat-label">Active</div>
            </div>
        </div>
        <div class="col-6">
            <div class="stat-box">
                <span class="stat-icon">🔥</span>
                <div class="stat-value">1,250</div>
                <div class="stat-label">Cal</div>
            </div>
        </div>
        <div class="col-6">
            <div class="stat-box">
                <span class="stat-icon">🌙</span>
                <div class="stat-value">6 hr 19</div>
                <div class="stat-label">Sleep</div>
            </div>
        </div>
    </div>

    <button type="submit" class="btn btn-primary w-100 mt-3 " style="font-size:18px">
        <i class="fa-solid fa-refresh"></i>
         Refresh
    </button>

    
</div>
