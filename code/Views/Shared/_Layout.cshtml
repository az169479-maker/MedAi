    <style>
    /* Navbar Styling */
    .navbar {
      backdrop-filter: blur(6px);
      transition: all 0.3s ease;
      z-index: 1000;
    }

    .navbar-brand {
      font-weight: 700;
      letter-spacing: 0.5px;
            color: #3551a5 !important;
            font-size: 22px!important;
    }

    .nav-link {
      transition: color 0.3s ease, transform 0.2s ease;
      font-weight: 500;
      position: relative;
    }

    .nav-link::after {
      content: '';
      position: absolute;
      left: 0;
      bottom: 3px;
      width: 0%;
      height: 2px;
      background-color: #333;
      transition: width 0.3s ease;
    }

    .nav-link:hover::after {
      width: 100%;
    }

    .nav-link:hover {
      color: #16a34a !important;
      transform: translateY(-2px);
    }

    /* Dropdown Animation */
    .dropdown-menu {
      border: none;
      border-radius: 12px;
      box-shadow: 0 8px 24px rgba(0, 0, 0, 0.08);
      padding: 10px 0;
      opacity: 0;
      transform: translateY(10px);
      transition: all 0.25s ease;
      display: none;
      visibility: hidden;
      font-size:17px
    }

    .dropdown-menu.show {
      opacity: 1;
      transform: translateY(0);
      visibility: visible;
    }

    .dropdown-item {
      transition: background 0.2s ease, transform 0.2s ease;
      font-weight: 500;
    }

    .dropdown-item:hover {
      background-color: #f0fdf4;
      color: #16a34a;
      transform: translateX(5px);
    }

    @@media (max-width: 768px) {
      .navbar-nav {
        text-align: center;
      }

      .nav-item {
        margin: 6px 0;
      }

      .nav-link::after {
        display: none;
      }

      #mainNavbar ul{

      }
    }
        /**http://148.66.154.214:8000/*/
  </style>
</head>
