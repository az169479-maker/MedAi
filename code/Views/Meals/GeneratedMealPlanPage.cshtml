
@{
    ViewData["Title"] = "GeneratedMealPlan";
}
<style>

    

    .btn-primary {
        transition: all 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            transform: scale(1.02);
        }

    .form-control:focus {
        box-shadow: none;
        border-color: #007bff;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .k-input-inner {
        height: 32px;
    }
    </style>
<div class="signup-card">
    <h4 class="text-center mb-4"><i class="fa-solid fa-clipboard-list"></i> Generated Meal Plan</h4>

    <div class="table-responsive">
        <div id="Grid"></div>
    </div>

    <a class="btn btn-primary w-100 mt-3" href="/Home/Index">
        <i class="fa-solid fa-check-circle me-2"></i> Save Plan
    </a>

    <a class="btn btn-primary w-100 mt-3" href="/Home/Index">
        <i class="fa-solid fa-file-pdf me-2"></i> Save as PDF & Share
    </a>

    <a class="btn btn-primary w-100 mt-3" href="/Meals/GroceryListPage">
        <i class="fa-solid fa-cart-shopping me-2"></i> Prepare Grocery List
    </a>
</div>


<!-- Bootstrap 5 -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

<!-- Kendo UI -->
<link rel="stylesheet" href="~/Assets/AdminLTE-3.1.0/plugins/KendoUI/default-ocean-blue.css" asp-append-version="true" />

 
@section Scripts{
    <script src="https://cdn.kendostatic.com/2023.2.829/js/jquery.min.js"></script>
@*  <script src="https://cdn.kendostatic.com/2023.2.829/js/kendo.all.min.js"></script>
 *@ <script src="~/Assets/AdminLTE-3.1.0/plugins/KendoUI/kendo.all.min.js"></script>

    <script>
        $(document).ready(function () {
            const mealData = [
                { Day: "Mon", Breakfast: "Oatmeal & Berries", Lunch: "Grilled Chicken Salad", Dinner: "Salmon & Veggies" },
                { Day: "Tue", Breakfast: "Smoothie Bowl", Lunch: "Quinoa Salad", Dinner: "Chicken Curry" },
                { Day: "Wed", Breakfast: "Avocado Toast", Lunch: "Turkey Sandwich", Dinner: "Beef Stir Fry" },
                { Day: "Thu", Breakfast: "Yogurt & Granola", Lunch: "Veggie Wrap", Dinner: "Spaghetti Bolognese" },
                { Day: "Fri", Breakfast: "Egg Muffins", Lunch: "Grilled Cheese", Dinner: "Shrimp Tacos" },
                { Day: "Sat", Breakfast: "Pancakes", Lunch: "Caesar Salad", Dinner: "Lamb Chops" },
                { Day: "Sun", Breakfast: "Fruit Salad", Lunch: "Chicken Shawarma", Dinner: "Stuffed Peppers" }
            ];

            $("#Grid").kendoGrid({
                dataSource: {
                    data: mealData,
                    pageSize: 7
                },
                scrollable: false,
                filterable: true,
                reorderable: true,
                resizable: true,
                sortable: true,
                pageable: {
                    pageSizes: [10, 25, 50, 100],
                    numeric: true
                },
                columns: [
                    { field: "Day", title: "Day", width: "100px", filterable: { multi: true, search: true } },
                    { field: "Breakfast", title: "Breakfast" },
                    { field: "Lunch", title: "Lunch" },
                    { field: "Dinner", title: "Dinner" }
                ]
            });
        });
    </script>
}




