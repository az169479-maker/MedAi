<div class="signup-card">
    <h4 class="text-center mb-4"><i class="fa-solid fa-heart-pulse"></i> Lifestyle & Preferences</h4>
    <form asp-action="Index" asp-controller="Home">

        <div class="form-group">
            <label for="dietary" class="form-label"><i class="fa-solid fa-bullseye"></i> Any dietary goals?</label>
            <select id="dietary" class="form-select" multiple>
                <option>Weight loss</option>
                <option>Muscle gain</option>
                <option>Maintenance</option>
            </select>
        </div>

        <div class="form-group">
            <label for="cuisines" class="form-label"><i class="fa-solid fa-utensils"></i> Preferred cuisines?</label>
            <select id="cuisines" class="form-select" multiple>
                <option>Emirati</option>
                <option>Mediterranean</option>
                <option>Asian</option>
                <option>Egyptian</option>
                <option>Indian</option>
            </select>
        </div>

        <div class="form-group">
            <label for="favMeals" class="form-label"><i class="fa-solid fa-thumbs-up"></i> Foods you like?</label>
            <select id="favMeals" class="form-select" multiple></select>
        </div>

        <div class="form-group">
            <label for="unfavMeals" class="form-label"><i class="fa-solid fa-thumbs-down"></i> Foods you dislike?</label>
            <select id="unfavMeals" class="form-select" multiple></select>
        </div>

        <div class="form-group">
            <label for="activity" class="form-label"><i class="fa-solid fa-person-walking"></i> Daily activity:</label>
            <select id="activity" class="form-select">
                <option value="1">Low</option>
                <option value="2">Moderate</option>
                <option value="3">High</option>
            </select>
        </div>

        <div class="form-group">
            <label for="frequency" class="form-label"><i class="fa-solid fa-dumbbell"></i> Workout frequency:</label>
            <select id="frequency" class="form-select">
                <option value="1">None</option>
                <option value="2">1–2x</option>
                <option value="3">3–5x</option>
                <option value="4">Daily</option>
            </select>
        </div>

        <div class="form-group">
            <label for="allergies" class="form-label"><i class="fa-solid fa-triangle-exclamation"></i> Allergies or intolerances?</label>
            <input type="text" class="form-control" placeholder="Any allergies" id="allergies" />
        </div>

        <button type="submit" class="btn btn-primary w-100 mt-3">
            <i class="fa-solid fa-floppy-disk"></i> Save
        </button>
    </form>
</div>


